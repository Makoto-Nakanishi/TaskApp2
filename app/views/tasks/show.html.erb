<h3>スケジュール詳細</h3>

<table>
    <tr>
        <th>タイトル</th>      
        <td><%= @task.name %></td>
    </tr>

    <tr>
        <th>開始日</th>
        <td><%= @task.started_at.strftime("%Y年%m月%d日") %></td>
    </tr>

    <tr>
        <th>終了日</th>
        <td><%= @task.ended_at.strftime("%Y年%m月%d日") %></td>
    </tr>

    <tr>
        <th>終日</th>
        <td>
            <% if @task.all_day == true %>
                ○
            <% end %>
        </td>
    </tr>

    <tr>
        <th>スケジュールメモ</th>
        <td><%= @task.description %></td>
    </tr>
</table>

<div>
  <p><%= link_to "スケジュール一覧に戻る", :tasks %></p>
  <p><%= link_to "スケジュールを編集する", [:edit, @task] %></p>
  <p><%= link_to "スケジュールを削除する", @task, method: :delete, data: { confirm: "本当に削除しますか？" } %></p>
</div>

<footer>
       <h1>現在の日時： <%= Date.today.strftime("%Y年%m月%d日") %> </h1>
</footer>
